root = true

[*]
indent_style = space
indent_size = 2
max_line_length = 120
spaces_around_operators = true
spaces_around_brackets = true

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[gulpfile.js]
indent_style = space
indent_size = 2

[*.{yml,package.json,package-lock.json}]
indent_style = space
indent_size = 2
